pipeline {
  agent any

  parameters {
  string defaultValue: 'https://github.com/byra1998/test1', description: 'adding parameter for giving branch name', name: 'branch '
  }
  environment{
    name = "byra"
    Deploy_branch = "$branch"
  }  
    stages {
      stage ( 'BUILD' ) {
        steps {
        echo "$name"
        echo params.abc
        echo "${branch}"
        echo " this is BUIILD stage "
        sh '''
        sleep 5
        exit 0
          '''
      }
}    

stage ( 'TEST PARALLEL' )  {
    parallel {
      stage ( 'TEST ON CHROME' ) {
        steps {
          echo " this is test on chrome browser "
            sh ' sleep 5 '
        }
      }

stage ( 'TEST ON SAFARI' ) {
      steps {
          echo "this is test on safari  browser"
            sh ' sleep 5 '
          }
    }
  }
}    


stage ( ' DEPLOY ' )  {
      parallel {
        stage ( ' SERVER 1 ' )  {
          steps {
          echo " this is deploy to server 1 "
          sh ' sleep 5 '
        }
      }          

stage ( ' SERVER 2 ' )  {
        steps {
          echo " thois is deploy to server 2 "
            sh ' sleep 5 '
        }
      }

stage ( ' SERVER 3 ' ) {
      steps {
        echo " this is deploy to sserver 3 "
          sh ' sleep 5 '
          }
        }
      }
    }
  }
}
